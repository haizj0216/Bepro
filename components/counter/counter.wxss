.counter {
    display: flex;
    border: solid 1rpx rgb(232,232,232);
    border-radius: 4rpx;
    align-items: center;
}

.sub-add {
    color: #9B9B9B;
    font-size: 20rpx;
    padding: 6rpx 14rpx;
    border-left: solid 1rpx rgb(232,232,232);
    border-right: solid 1rpx rgb(232,232,232);
    display: flex;
    align-items: center;
    justify-content: center;
}

.number {
    color: rgba(33,33,33,0.8);
    font-size: 20rpx;
    width: 60rpx;
    text-align: center;
}