.modal {
    position: fixed;
    top: 0;
    width: 100vw;
    height: 100vh;
    z-index: 999;
}

.modal-mask {
    background-color: rgb(7,7,7);
    opacity: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
}

.modal-container {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.modal-content {
    background-color: #fff;
    opacity: 0;
    transform: scale(0);
    position: fixed;
}

.modal-close {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    top: 32rpx;
    right: 36rpx;
    z-index: 999;
}