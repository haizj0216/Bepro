page {
  overflow-x: hidden;
}

.relative {
  position: relative;
}

.swiper {
  width: 750rpx;
  height: 750rpx;
}

.icons {
  position: absolute;
  top: 705rpx;
  right: 0;
  display: flex;
}

.icon-bg {
  background-color: rgb(179,167,162);
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 100%;
  margin-right: 30rpx;
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.dots {
  display: flex;
  padding: 30rpx 20rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  background-color: rgb(216,216,216);
  border-radius: 100%;
  margin: 0 8rpx;
}

.dot-active {
  background-color: rgb(169,160,142);
}

.detail {
  margin: 60rpx 40rpx;
}

.padding-bottom {
  padding: 60rpx 0;
  width: 750rpx;
}

.name {
  color: rgb(37,37,37);
  font-size: 36rpx;
  letter-spacing: 5rpx;
  font-weight: bold;
}

.out-of-stock {
  background-color: rgb(193,193,193);
  color: #fff;
  font-size: 16rpx;
  padding: 6rpx 20rpx;
  display: inline-block;
}

.des {
  color: rgb(125,128,136);
  font-size: 26rpx;
  letter-spacing: 4rpx;
  font-weight: 400;
  margin-top: 28rpx;
}

.price {
  color: rgb(37,37,37);
  font-size: 26rpx;
  letter-spacing: 3rpx;
  margin-top: 28rpx;
}

.main-des {
  color: rgb(103,106,113);
  font-size: 22rpx;
  margin-top: 60rpx;
  line-height: 40rpx;
  margin-bottom: 50rpx;
  margin-left: 16rpx;
}

.card-head {
  margin: 0 40rpx!important;
}

.card-body {
  margin: 40rpx 0 40rpx 56rpx;
}

.card-body-flex {
  display: flex;
  margin-left: 0rpx;
  flex-wrap: wrap;
}

.flex {
  display: flex;
  height: 44rpx;
  line-height: 44rpx;
  justify-content: space-between;
}

.key {
  color: rgb(103,106,113);
  font-size: 22rpx;
}

.value {
  color: rgb(51,51,51);
  font-size: 22rpx;
  width: 310rpx;
}

.flex-stars {
  width: 250rpx;
  margin-left: 60rpx;
  justify-content: baseline;
}

.stars {
  display: flex;
}

.formula {
  color: rgb(179,167,162);
  font-size: 24rpx;
  letter-spacing: 2.5rpx;
  float: right;
  margin-top: 48rpx;
  margin-right: 40rpx;
  margin-bottom: 25rpx;
}

.brown-arrow {
  width: 26rpx;
  height: 24rpx;
}

.text {
  font-size: 22rpx;
  color: rgb(103,106,113);
  line-height: 44rpx;
  margin: 20rpx 40rpx 0 56rpx;
}

.text-image {
  width: 654rpx;
  margin: 20rpx 40rpx 0 56rpx;
}

.environmental {
  width: 472rpx;
  height: 126rpx;
  margin-top: 40rpx;
}

.bottom {
  position: fixed;
  bottom: 0;
}

.bottom-container {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  width: 750rpx;
}

.bottom-icons {
  padding: 0 26rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.bottom-icon {
  width: 46rpx;
  height: 46rpx;
  margin-left: 20rpx;
}

.cart-num {
  width: 30rpx;
  height: 30rpx;
  background-color: #000;
  color: #fff;
  border-radius: 100%;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.buy-now {
  width: 280rpx!important;
}

.modal-body {
  position: relative;
  padding-bottom: 60rpx;
  width: 650rpx;
  overflow: hidden;
}

.modal-title {
  color: rgb(37,37,37);
  font-size: 36rpx;
  font-weight: bolder;
  letter-spacing: 5rpx;
  padding-left: 40rpx;
  padding-top: 44rpx;
}

.modal-des {
  color: rgb(103,106,113);
  font-size: 22rpx;
  line-height: 44rpx;
  padding-left: 40rpx;
  padding-right: 60rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.modal-table-body {
  overflow-y: scroll;
  max-height: 930rpx;
}

.modal-table-row {
  display: flex;
  border-bottom: solid 1px rgb(218,220,219);
  padding: 20rpx 24rpx 20rpx 44rpx;
  justify-content: space-between;
}

.modal-table-title {
  color: rgb(37,37,37);
  font-size: 26rpx;
  font-weight: bolder;
}

.modal-table-text {
  color: rgb(103,106,113);
  font-size: 22rpx;
}

.modal-table-row1-width {
  width: 245rpx;
}

.modal-table-row2-width {
  width: 150rpx;
  text-align: center;
  margin-right: 34rpx;
}

.modal-table-value {
  width: 287rpx;
}

.share-btn {
  background: transparent;
  padding: 0rpx!important;
}

.safe-area {
  height: 68rpx;
  width: 750rpx;
  background: #fff;
}

.add-cart {
  background: transparent!important;
}

.popup-cancel {
  color: rgb(60,60,60);
  text-align: center;
  padding-top: 38rpx;
  padding-bottom: 30rpx;
  border-top: solid 1px rgb(218,220,219);
  font-size: 28rpx;
}

.share-container {
  display: flex;
  justify-content: center;
  padding-top: 108rpx;
  padding-bottom: 74rpx;
}

.share-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  padding: 0rpx!important;
}

.share-text {
  color: rgb(60,60,60);
  font-size: 24rpx;
  margin-top: 18rpx;
}

.share-icon {
  width: 104rpx;
  height: 104rpx;
}