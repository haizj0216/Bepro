/* pages/home/home.wxss */

page {
  height: 100%;
}

.container-fill {
  height: 100%;
  overflow: hidden;
}

.scroll-fullpage {
  height: 100%;
  transition: all 0.3s;
}

.section {
  height: 100%;
}

.section-maintitle {
  display: block;
  text-align: center;
  font-size: 50rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 10rpx;
  padding-top: 140rpx;
}

.section-subtitle {
  display: block;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  letter-spacing: 10rpx;
}

.active .section-maintitle, .active .section-subtitle {
  animation: mymove 0.8s;
}

.container_1 {
  height: 100%;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  display: flex;
  justify-content: horizonal-center;
}

.title {
  size: 30px;
  margin-top: 50px;
  text-align: center;
}

.image {
  width: 100%;
}

.title_desc {
  margin-top: 50px;
  size: 30px;
  text-align: center;
}

.usermotto {
  margin-top: 200px;
}

.next {
  position: fixed;
  bottom: 30px;
  z-index: -1;
  font-size: 12px;
  color: #bbb;
  text-align: center;
  width: 100%;
}

.array_down {
  position: fixed;
  bottom: 10px;
  height: 10px;
  width: 15px;
  animation: arrow 1s infinite ease-in-out;
}

.view_margin {
  margin-left: 30px;
  margin-right: 30px;
}

.home_grids {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.home_grid {
  margin: 10px 0px;
  width: 25%;
  flex: 0 0 auto;
  box-sizing: border-box;
}

.grid_item {
  width: 100%;
  height: 100%;
}

.image_item {
  width: 100%;
  height: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.text_item {
  font-size: 8px;
  width: 100%;
  text-align: center;
}

.test_text {
  text-align: center;
  font-size: 14px;
  color: white;
  background-color: black;
  padding: 10px 0px;
  bottom: 40px;
}

.qu-button {
    background-color: rgb(37,37,37);
    color: #fff;
    font-size: 26rpx;
    padding: 8rpx 0;
    border-radius: 0;
    position: absolute;
    bottom: 120rpx;
    width: 610rpx;
    height: 80rpx!important;
    margin-left: 70rpx;
}

@media (max-height:750px) {
    .arrow-container-mini {
        bottom: 20rpx;
    }

    .qu-button-mini {
        bottom: 120rpx;
    }
}

@keyframes mymove {
  from {
    transform: translateY(-400rpx) scale(0.5) rotateY(90deg);
  }

  to {
    transform: translateY(0) scale(1) rotateY(0);
  }
}

@-webkit-keyframes arrow {
    0% {
        transform: translateY(0);
    }

    50% {
        transform: translateY(15rpx);
    }

    100% {
        transform: translateY(0);
    }
}
