page {
  background-color: rgb(243,244,244);
}

.payment-block {
  padding: 22rpx 44rpx;
  background-color: #fff;
}

.payment-block-margin {
  margin-top: 24rpx;
}

.payment-block-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.payment-block-head-text {
  color: rgb(56,56,56);
  font-size: 34rpx;
  letter-spacing: 3.5rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.icon-location {
  width: 48rpx;
  height: 48rpx;
  margin-right: 6rpx;
}

.icon-arrow {
  width: 16rpx;
  height: 26rpx;
  margin-left: 20rpx;
}

.payment-name-phone {
  color: rgba(33,33,33,0.8);
  font-size: 28rpx;
  margin-top: 40rpx;
}

.payment-address {
  color: rgba(33,33,33,0.8);
  font-size: 24rpx;
}

.customer-message {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
  margin-left: 10rpx;
}

.for-text {
  color: rgb(35,25,22);
  font-size: 18rpx;
}

.for-name {
  font-size: 36rpx;
  color: rgb(35,25,22);
  font-weight: bold;
  margin-left: 14rpx;
}

.customer-message-text {
  color: rgb(35,25,22);
  font-size: 24rpx;
  letter-spacing: 4rpx;
  text-align: left;
  margin-top: 26rpx;
}

.message-btn {
  width: 232rpx!important;
  height: 60rpx!important;
  font-size: 24rpx!important;
  font-weight: bold!important;
  margin-top: 20rpx!important;
}

.express-box {
  width: 372rpx;
  height: 240rpx;
  margin-left: -22rpx;
}

.order-info {
  padding-top: 22rpx;
}

.order-info-line {
  display: flex;
  justify-content: space-between;
  margin-top: 28rpx;
}

.order-info-key {
  color: rgba(33,33,33,0.8);
  font-size: 28rpx;
  font-weight: 500;
}

.order-info-value {
  color: rgb(56,56,56);
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.order-info-total {
  color: rgb(56,56,56);
  font-size: 32rpx;
  font-size: bolder;
}

.user-score {
  color: rgba(33,33,33,0.8);
  font-size: 24rpx;
}

.score {
  font-weight: bolder;
}

.wx-switch-input {
  width: 100rpx!important;
  height: 52rpx!important;
}

.wx-switch-input::before {
  width: 99rpx!important;
  height: 49rpx!important;
}

.wx-switch-input::after {
  width: 49rpx!important;
  height: 49rpx!important;
}

.pay {
  width: 600rpx;
  height: 92rpx;
  margin-left: 75rpx;
  margin-top: 60rpx;
  font-size: 28rpx;
  margin-bottom: 60rpx;
}

.sale-contract {
  color: rgb(158,158,158);
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  padding-bottom: 60rpx;
}

.sale-contract-text {
  margin-left: 20rpx;
}

.navigator {
  text-decoration: underline;
  display: inline-block;
}

.mask {
  position: absolute;
  top: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(7,7,7,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.loading-text {
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 24rpx;
}

.loading-text-des {
  color: #fff;
  font-size: 24rpx;
  letter-spacing: 13rpx;
  margin-top: 26rpx;
}

.modal-body {
  padding: 50rpx 60rpx;
  width: 655rpx;
  box-sizing: border-box;
}

.modal-title {
  color: rgb(56,56,56);
  font-size: 34rpx;
  font-weight: 500;
}

.modal-input-line {
  display: flex;
  align-items: center;
  margin-top: 40rpx;
}

.modal-for {
  color: rgb(35,25,22);
  font-size: 28rpx;
  margin-right: 32rpx;
}

.modal-input {
  margin-top: 20rpx;
}

.modal-btns {
  display: flex;
  justify-content: flex-end;
  margin-top: 80rpx;
}

.modal-btn {
  width: 200rpx!important;
  margin-left: 30rpx!important;
}

.input-container {
  display: flex;
  border-bottom: solid 1px #C1C1C1;
  padding-top: 4rpx;
  align-items: center;
  width: 100%;
}

.label {
  font-size: 28rpx;
  color: rgba(33,33,33,0.8);
  font-weight: bold;
  margin-right: 30rpx;
  min-width: 112rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.placeholder {
  font-size: 24rpx;
  color: rgb(177,177,177);
}

.input-text {
  font-size: 28rpx;
  flex: 1;
  height: 70rpx;
}

.item-detail {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  padding-bottom: 22rpx;
}

.item-image-item {
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
  position: relative;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
}

.item-recommend {
  position: absolute;
  right: 0;
  bottom: -10rpx;
  background: rgb(77,77,77);
  color: #fff;
  font-size: 16rpx;
  padding: 4rpx 10rpx;
}

.item-name {
  font-size: 26rpx;
  color: rgba(33,33,33,0.8);
  font-weight: bold;
}

.item-des {
  font-size: 20rpx;
  color: rgb(103,106,113);
  margin-top: 8rpx;
}

.item-effort {
  font-size: 20rpx;
  color: rgb(177,177,177);
  margin-top: 6rpx;
  margin-bottom: 20rpx;
}

.item-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.item-bottom-price {
  font-size: 20rpx;
  color: rgba(33,33,33,0.8);
  font-weight: bold;
  margin-left: 20rpx;
}

.item_count{
  font-size: 20rpx;
  color: rgb(177,177,177);
}