/* pages/question/question.wxss */

.title {
  margin-top: 30px;
  text-align: center;
}

.question_1 {
  margin-top: 20px;
  margin-left: 30px;
  margin-right: 30px;
}

.home_grids {
  margin-top: 10px;
  margin-left: 30px;
  margin-right: 30px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.image {
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.text {
  font-size: 12px;
  width: 100%;
  text-align: center;
}

.home_grid {
  margin: 10px 0px;
  width: 33.33333%;
  flex: 0 0 auto;
  padding-left: 5px;
  padding-right: 5px;
  box-sizing: border-box;
}

.grid_item_checked {
  width: 100%;
  height: 100%;
  background-color: #dcdcdc;
}

.grid_item_unchecked {
  width: 100%;
  height: 100%;
}

.text_grid {
  width: 25%;
  flex: 0 0 auto;
  box-sizing: border-box;
  text-align: center;
}
.text_grid_selected {
  width: 25%;
  flex: 0 0 auto;
  background-color: #dcdcdc
}
.text2 {
  font-size: 12px;
  width: 100%;
  height: 40px;
  line-height: 40rpx;
  text-align: center;
  border: 2rpx black solid;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.next {
  margin-top: 30px;
  margin-right: 20px;
  text-align: right;
  font-size: 14px;
  margin-bottom: 20px;
}