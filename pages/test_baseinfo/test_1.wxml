<!--pages/test_baseinfo/test_1.wxml-->
<view>
  <view class="title">
    <text>1/基本信息</text>
  </view>
  <view class="name">a.您的姓名或昵称
  </view>
  <input class="name_input"></input>

  <view class="name">b.您的性别
  </view>
  <radio-group>
    <radio class="sex_female"> 女性</radio>
    <radio class="sex_male"> 男性</radio>
  </radio-group>
  <view class="name">c.您的年龄
  </view>
  <view class="name">d.您的居住地
  </view>
  <picker mode='region' bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
    <view class="picker">{{region[0]}} {{region[1]}} {{region[2]}} </view>
  </picker>
  <view class="line"></view>
  <view class="next" bindtap="toTest2">提交更新></view>
</view>