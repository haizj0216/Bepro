/* pages/test_baseinfo/test_1.wxss */

.title {
  margin-top: 40px;
  text-align: center;
}

.name {
  margin-top: 40px;
  font-size: 12px;
  color: #bbb;
  align-content: left;
  margin-left: 20px;
}

.name_input {
  margin-left: 20px;
  margin-right: 20px;
  border-bottom: 1px solid #ccc;
  font-size: 24rpx;
}

.sex_female {
  margin-left: 10px;
  font-size: 24px;
  transform: scale(0.5);
}

.sex_male {
  margin-left: 50px;
  font-size: 24px;
  transform: scale(0.5);
}

.radio_group {
  margin-left: 10px;
  margin-top: 5px;
}

.demo-radio {
  font-size: 12px;
}

.icon {
  width: 10px;
  height: 10px;
}

.picker {
  margin-top: 5px;
  margin-left: 20px;
  font-size: 12px;
}

.age {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin-left: 20px;
  margin-right: 20px;
}

.age_text {
  flex-grow: 1;
  font-size: 10px;
  text-align: center;
}

.line {
  margin-left: 20px;
  margin-right: 20px;
  height: 5rpx;
  margin-top: 5px;
  background: #e0e3da;
}

.next {
  margin-top: 30px;
  margin-right: 20px;
  text-align: right;
  font-size: 14px;
  margin-bottom: 20px;
}

.slider {
  margin-right: 40px;
  margin-left: 40px;
}

.age_dot {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  margin-left: 40px;
  margin-right: 40px;
  z-index: -1;
  position: fixed;
}

.dot {
  width: 3px;
  height: 3px;
  flex-grow: 1;
  background-color: #000;
}
.item_view{
  text-align: center;
  align-items: center;
  justify-content: center;
}